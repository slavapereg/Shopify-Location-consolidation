{
  "name": "shopify-location-consolidation",
  "version": "1.0.0",
  "description": "Shopify app for automatic order line item location consolidation",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "echo 'No build step required for Node.js app'",
    "heroku-postbuild": "npm ci --only=production",
    "docker:build": "docker build -t shopify-location-consolidation .",
    "docker:run": "docker run -p 3000:3000 --env-file .env shopify-location-consolidation"
  },
  "keywords": [
    "shopify",
    "location",
    "consolidation",
    "fulfillment",
    "webhook",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@shopify/shopify-api": "^7.7.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/shopify-location-consolidation.git"
  },
